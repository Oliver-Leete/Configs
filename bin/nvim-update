#!/bin/bash

cd /home/oleete/.config/nvim/neovim
su -c 'git fetch' oleete
if [[ $(su -c 'git log ..origin/master --oneline' oleete | wc -l) -gt 0 ]]; then
	su -c 'git pull --no-rebase' oleete

	echo -n "Would you like to update Neovim [y/n]? "
	read reply

	if [ "$reply" = y -o "$reply" = Y ]; then
		make distclean
		make CMAKE_BUILD_TYPE=Release
		make install
	fi
else
	echo no changes to neovim
fi
