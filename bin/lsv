#!/bin/sh

# Get a list of files
LIST=$(find "$1" -type f -not -name "*.srt" -not -name "*.sup")

# In case of a space in file names, split on return
IFS_ORIG=$IFS
IFS="
"

# Loop over the file list and probe each file.
for v in $LIST; do
    size=$(stat -c "%s" "$v" | numfmt --to=iec-i --suffix=B --padding=6)
	dur=$(ffprobe -i "$v" -show_entries format=duration -v quiet -of csv="p=0")
	dur=${dur%.*}
	dur=$(date -d@"$dur" -u +%H:%M:%S)
	printf "$dur - $size - ${v:2}\n"
done

exit
