#!/bin/bash

old_id=$(kitty @ ls | jq ".[].tabs[] | select(.is_focused) | .windows[] | .columns, .lines")

xdotool key --clearmodifiers "ctrl+shift+m"
sleep 0.5

new_id=$(kitty @ ls | jq ".[].tabs[] | select(.is_focused) | .windows[] | .columns, .lines")

if [ "$old_id" = "$new_id" ]; then
	xdotool key "super+meta+m"
fi
