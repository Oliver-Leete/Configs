#!/bin/bash

cd /home/oleete/.config/kak/kakoune
su -c 'git fetch' oleete
if [[ $(su -c 'git log ..origin/master --oneline' oleete | wc -l) -gt 0 ]]
then
    su -c 'git pull --no-rebase' oleete

    echo -n "Would you like to update Kakoune [y/n]? "
    read reply

    if [ "$reply" = y -o "$reply" = Y ]
    then
        make
        make install
    fi
else
    echo no changes to Kakoune
fi

