#!/bin/bash

commands=$(kitty @ ls | jq ".[].tabs[].windows[] | select(.is_focused) | .foreground_processes[].cmdline[0]")
if [[ "$commands" == *"vim"* ]]; then
    kitty @ send-text ";$1"
    # tabID=$(kitty @ ls | jq ".[].tabs[] | select(.is_focused) | .id")
    # nvr --servername /tmp/nvr-server-$tabID --nostart -c "$1"
    exit
else
    kitty @ $2
fi
