#!/bin/bash

echo -n "Would you like to update before you $1 y/n?"
read reply

if [ "$reply" = y -o "$reply" = Y ]; then
	xdotool key super+meta+f
	pacman -Syu
	su -c 'yay -Syu' oleete
	snap refresh
	flatpak update
	cargo install-update -a
	su -c 'tldr -u' oleete
	/home/oleete/.config/bin/xmonad-update
	/home/oleete/.config/bin/nvim-update
	/home/oleete/.config/bin/kak-update
	/home/oleete/.config/bin/confirm $@
else
	/home/oleete/.config/bin/confirm $@
fi
