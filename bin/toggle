#!/bin/sh
sound() {
	if pgrep pavucontrol; then
		pkill pavucontrol
	else
		pavucontrol &
	fi
}

network() {
	if pgrep -f nm-connection-editor; then
		pkill -f nm-connection-editor
	else
		nm-connection-editor &
	fi
}

bluetooth() {
	if pgrep blueberry; then
		pkill blueberry
	else
		blueberry &
	fi
}

battery() {
	if pgrep tlpui; then
		pkill tlpui
	else
		tlpui &
	fi
}

case ${1:-} in
sound) sound ;;
network) network ;;
bluetooth) bluetooth ;;
battery) battery ;;
*) ;;
esac
exit
